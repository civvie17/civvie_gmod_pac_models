"VertexLitGeneric"
{
	"$baseTexture" "models\classicguard/humans\guards/guard_accessories_d"       
        "$bumpmap" "models\classicguard/humans\guards/guard_accessories_N"
        "$surfaceprop" "metal"
        "$selfillum" 0

	"$normalmapalphaenvmapmask" "1"
	"$envmap" "env_cubemap"
	"$envmaptint" "[0.85 0.90 1.3]"

        $detail detail\bm_metal_detail_01 // e.g. for brickwork, concrete...
        $detailscale 5
        $detailblendfactor 0.4
        $detailblendmode 0

        "$phong" "1"
        $phongexponent "30"
	"$phongboost" "2"
	"$phongalbedotint" "1"
	"$phongfresnelranges" "[0.5 0.7 1]"

        // Rim lighting parameters
	"$rimlight" "1"				// To enable rim lighting (requires phong)
	"$rimlightexponent" "80"		// Exponent for phong component of rim lighting
	"$rimlightboost" ".5"			// Boost for ambient cube component of rim lighting
	
	
	"$model" 1
	
}


